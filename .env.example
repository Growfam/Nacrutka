# Telegram SMM Bot Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=production

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT].supabase.co
SUPABASE_KEY=eyJ...your-supabase-anon-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:AAF...your-bot-token
ADMIN_TELEGRAM_ID=123456789  # Your Telegram user ID

# Twiboost API
TWIBOOST_API_URL=https://twiboost.com/api/v2
TWIBOOST_API_KEY=8WAhDkeYdQX3c5rJynhvbEwIdczM0H...your-api-key

# Monitoring Settings (seconds)
CHECK_INTERVAL=30  # How often to check channels for new posts
PROCESS_INTERVAL=10  # How often to process new posts

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Optional: Timezone (for scheduling)
TZ=Europe/Kiev