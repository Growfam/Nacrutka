# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# API Keys
NAKRUTKA_API_KEY=your-nakrutka-api-key
NAKRUTKA_API_URL=https://nakrutochka.com/api/v2
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Bot Settings
CHECK_INTERVAL=30  # Seconds between channel checks
MAX_RETRIES=3      # Maximum retry attempts for failed operations
RETRY_DELAY=5      # Seconds between retries

# Admin Configuration
ADMIN_TELEGRAM_ID=your-telegram-id  # Your Telegram user ID for admin commands

# Environment Settings
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR
TZ=Europe/Kiev          # Timezone

# Advanced Telegram Monitoring (Optional)
# Required only if you want to use Telethon for better channel access
# Get these from https://my.telegram.org/apps
TELETHON_API_ID=your-api-id
TELETHON_API_HASH=your-api-hash
TELETHON_SESSION_NAME=smm_bot_session
TELETHON_PHONE=+380123456789  # Only for first authentication

# Performance Settings (Optional)
MAX_CONCURRENT_ORDERS=5     # Max simultaneous Nakrutka orders
BATCH_SIZE=10              # Batch size for processing
RATE_LIMIT_CALLS=60        # API calls per minute

# Database Pool Settings (Optional)
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_MAX_QUERIES=50000
DB_MAX_INACTIVE_CONNECTION_LIFETIME=300

# Monitoring (Optional)
ENABLE_METRICS=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=300  # Seconds

# Debug Settings (Optional)
DEBUG_MODE=false
SAVE_API_RESPONSES=false
LOG_SQL_QUERIES=false

# Notification Settings (Optional)
ENABLE_NOTIFICATIONS=false
NOTIFICATION_CHAT_ID=your-notification-chat-id

# Backup Settings (Optional)
ENABLE_BACKUPS=false
BACKUP_INTERVAL=86400  # 24 hours in seconds
BACKUP_RETENTION_DAYS=7